@model List<string>

@if (Model.Count > 0)
{
    <div class="validation-summary-errors">
        <p>Záznam sa nepodarilo uložiť. Opravte chyby a skúste to znovu.</p>
        <ul>
            @{
                foreach (string errMsg in Model)
                {
                    <li class="field-validation-error"><span>@errMsg</span></li>
                }
            }
        </ul>
    </div>
}
