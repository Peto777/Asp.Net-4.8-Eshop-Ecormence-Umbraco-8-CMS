@model eshoppgsoftweb.lib.Models.Ecommerce.PaymentTypeModel

<h1>SPÔSOB PLATBY</h1>
@{
    using (Html.BeginUmbracoForm<eshoppgsoftweb.lib.Controllers.Ecommerce.PaymentTypeController>("SaveRecord", null, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="naplnspajzu-form">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "Údaje sa nepodarilo uložiť. Prosím opravte chyby a skúste to znovu.")
            <div class="row">
                <div class="col-md-2">
                    <div class="form-item-hidden">
                        @Html.TextBoxFor(m => m.pk, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-item">
                        @Html.LabelFor(x => x.PaymentOrder)
                        @Html.TextBoxFor(m => m.PaymentOrder, new { @class = "form-control", })
                        @Html.ValidationMessageFor(m => m.PaymentOrder)
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-item">
                        @Html.LabelFor(x => x.Code)
                        @Html.TextBoxFor(m => m.Code, new { @class = "form-control", })
                        @Html.ValidationMessageFor(m => m.Code)
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-item">
                        @Html.LabelFor(x => x.VatPerc)
                        @Html.TextBoxFor(m => m.VatPerc, new { @class = "form-control", })
                        @Html.ValidationMessageFor(m => m.VatPerc)
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-item">
                        @Html.LabelFor(x => x.PriceNoVat)
                        @Html.TextBoxFor(m => m.PriceNoVat, new { @class = "form-control", })
                        @Html.ValidationMessageFor(m => m.PriceNoVat)
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-item">
                        @Html.LabelFor(x => x.PriceWithVat)
                        @Html.TextBoxFor(m => m.PriceWithVat, new { @class = "form-control", })
                        @Html.ValidationMessageFor(m => m.PriceWithVat)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-item">
                        @Html.LabelFor(x => x.Name)
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-item">
                        @Html.LabelFor(x => x.GatewayTypeId)
                        @Html.DropDownListFor(m => m.GatewayTypeId, new SelectList(Model.PaymentGatewayCollection, "DataKey", "Name"), new { @class = "form-control chosen-select" })
                        @Html.ValidationMessageFor(m => m.GatewayTypeId)
                    </div>
                </div>
            </div>
            <div class="row new-section">
                <div class="col-md-12">
                    <a href="#" onclick="document.getElementById('submitButton').click(); return false;" class="btn btn-default btn-lg">Zapísať</a>
                    <a href="@Url.Content("~/moj-ucet/sposoby-platby")" class="btn btn-default btn-lg">Späť</a>
                    <input type="submit" id="submitButton" class="hidden" />
                </div>
            </div>
        </div>
    }
}
