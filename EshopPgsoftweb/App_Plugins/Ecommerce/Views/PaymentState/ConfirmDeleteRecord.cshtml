@model eshoppgsoftweb.lib.Models.Ecommerce.PaymentStateModel
@using eshoppgsoftweb.lib.Repositories

<h1>Prajete si skutočne odstrániť vybraný stav úhrady?</h1>

@{
    using (Html.BeginUmbracoForm<eshoppgsoftweb.lib.Controllers.Ecommerce.PaymentStateController>("DeleteRecord", null, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="naplnspajzu-form">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "Údaje sa nepodarilo uložiť. Prosím opravte chyby a skúste to znovu.")
            <div class="row">
                <div class="col-md-2">
                    <div class="form-item-hidden">
                        @Html.TextBoxFor(m => m.pk, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-item">
                        @Html.LabelFor(x => x.Code)
                        @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.Code)
                    </div>
                </div>
                <div class="col-md-10">
                    <div class="form-item">
                        @Html.LabelFor(x => x.Title)
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.Title)
                    </div>
                </div>
            </div>
            <div class="row new-section">
                <div class="col-md-12">
                    <a href="#" onclick="document.getElementById('submitButton').click(); return false;" class="btn btn-default btn-lg">Odstrániť</a>
                    <a href="@Url.Content("~/moj-ucet/stavy-uhrady")" class="btn btn-default btn-lg">Späť</a>
                    <input type="submit" id="submitButton" class="hidden" />
                </div>
            </div>
        </div>
    }
}
