@model eshoppgsoftweb.lib.Models.Ecommerce.CategoryModel

@{
    using (Html.BeginUmbracoForm<eshoppgsoftweb.lib.Controllers.Ecommerce.CategoryController>("DeleteRecord", null, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="naplnspajzu-form">
            <div class="row">
                <div class="col-md-12">
                    @Html.Partial("Ecommerce/_ModelError", Model.ModelErrors)
                    @Html.AntiForgeryToken()
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p class="big">Prajete si skutočne odstrániť vybranú kategóriu a všetky jej podkategórie?</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-item-hidden">
                        @Html.TextBoxFor(m => m.pk, new { @class = "form-control", @readonly = "readonly" })
                        @Html.CheckBoxFor(m => m.CategoryIsVisible, new { @readonly = "readonly" })
                        @Html.TextBoxFor(m => m.ParentCategoryKey, new { @class = "form-control", @readonly = "readonly" })
                        @Html.TextBoxFor(m => m.CategoryUrl, new { @class = "form-control", @readonly = "readonly" })
                        @Html.TextBoxFor(m => m.CategoryMetaTitle, new { @class = "form-control", @readonly = "readonly" })
                        @Html.TextBoxFor(m => m.CategoryMetaKeywords, new { @class = "form-control", @readonly = "readonly" })
                        @Html.TextBoxFor(m => m.CategoryMetaDescription, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <div class="form-item">
                        @Html.LabelFor(x => x.CategoryOrder)
                        @Html.TextBoxFor(m => m.CategoryOrder, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.CategoryOrder)
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-item">
                        @Html.LabelFor(x => x.CategoryIsVisible)
                        @Html.TextBoxFor(m => m.CategoryIsVisibleText, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.CategoryIsVisible)
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-item">
                        @Html.LabelFor(x => x.CategoryCode)
                        @Html.TextBoxFor(m => m.CategoryCode, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.CategoryCode)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-item">
                        @Html.LabelFor(x => x.CategoryName)
                        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.CategoryName)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-item">
                        @Html.LabelFor(x => x.CategoryDescription)
                        @Html.TextAreaFor(m => m.CategoryDescription, new { @class = "form-control", @readonly = "readonly", rows = 10 })
                        @Html.ValidationMessageFor(m => m.CategoryDescription)
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-item">
                        @Html.LabelFor(x => x.CategoryImg)
                        @Html.TextBoxFor(m => m.CategoryImg, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.CategoryImg)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-item">
                        @Html.LabelFor(x => x.CategoryOfferText)
                        @Html.TextAreaFor(m => m.CategoryOfferText, new { @class = "form-control", @readonly = "readonly", rows = 5 })
                        @Html.ValidationMessageFor(m => m.CategoryOfferText)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a href="#" onclick="document.getElementById('submitButton').click(); return false;" class="btn btn-default btn-lg">Odstrániť</a>
                    <a href="@Url.Content("~/moj-ucet/kategorie")" class="btn btn-default btn-lg">Späť</a>
                    <input type="submit" id="submitButton" class="hidden" />
                </div>
            </div>
        </div>
    }
}
