@model eshoppgsoftweb.lib.Models.Ecommerce.SysConstModel

<h1>E-SHOP</h1>
@{
    using (Html.BeginUmbracoForm<eshoppgsoftweb.lib.Controllers.Ecommerce.SysConstController>("SaveRecord", null, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="naplnspajzu-form">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "Údaje sa nepodarilo uložiť. Prosím opravte chyby a skúste to znovu.")
            <div class="row">
                <div class="col-md-6">
                    <div class="form-item-hidden">
                        @Html.TextBoxFor(m => m.pk, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-item">
                        @Html.LabelFor(x => x.CompanyName)
                        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CompanyName)
                    </div>
                    <div class="form-item">
                        @Html.LabelFor(x => x.AddressStreet)
                        @Html.TextBoxFor(m => m.AddressStreet, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.AddressStreet)
                    </div>
                    <div class="form-item">
                        @Html.LabelFor(x => x.AddressZip)
                        @Html.TextBoxFor(m => m.AddressZip, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.AddressZip)
                    </div>
                    <div class="form-item">
                        @Html.LabelFor(x => x.AddressCity)
                        @Html.TextBoxFor(m => m.AddressCity, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.AddressCity)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-item">
                        @Html.LabelFor(x => x.CompanyIco)
                        @Html.TextBoxFor(m => m.CompanyIco, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CompanyIco)
                    </div>
                    <div class="form-item">
                        @Html.LabelFor(x => x.CompanyDic)
                        @Html.TextBoxFor(m => m.CompanyDic, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CompanyDic)
                    </div>
                    <div class="form-item">
                        @Html.LabelFor(x => x.CompanyIcdph)
                        @Html.TextBoxFor(m => m.CompanyIcdph, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CompanyIcdph)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-item">
                        @Html.LabelFor(x => x.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-item">
                        @Html.LabelFor(x => x.Phone)
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Phone)
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-item">
                        @Html.LabelFor(x => x.Bank)
                        @Html.TextBoxFor(m => m.Bank, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Bank)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-item">
                        @Html.LabelFor(x => x.Iban)
                        @Html.TextBoxFor(m => m.Iban, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Iban)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-item">
                        @Html.LabelFor(x => x.Currency)
                        @Html.TextBoxFor(m => m.Currency, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Currency)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-item">
                        @Html.LabelFor(x => x.FreeTransportPrice)
                        @Html.TextBoxFor(m => m.FreeTransportPrice, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FreeTransportPrice)
                    </div>
                </div>
            </div>
            <div class="row new-section">
                <div class="col-md-12">
                    <a href="#" onclick="document.getElementById('submitButton').click(); return false;" class="btn btn-default btn-lg">Zapísať</a>
                    <a href="@Url.Content("~/moj-ucet")" class="btn btn-default btn-lg">Späť</a>
                    <input type="submit" id="submitButton" class="hidden" />
                </div>
            </div>
        </div>
    }
}
