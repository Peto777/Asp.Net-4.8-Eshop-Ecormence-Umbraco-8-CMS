@model eshoppgsoftweb.lib.Models.Ecommerce.EshoppgsoftwebMemberModel

<h1>UŽÍVATEĽ</h1>
@{
    using (Html.BeginUmbracoForm<eshoppgsoftweb.lib.Controllers.Ecommerce.MemberController>("SaveRecord", null, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="naplnspajzu-form">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-6">
                    <div class="form-item-hidden">
                        @Html.TextBoxFor(m => m.MemberId, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-item">
                        @Html.LabelFor(x => x.Name)
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                    <div class="form-item">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="form-item">
                        @Html.LabelFor(m => m.PasswordRepeat)
                        @Html.PasswordFor(m => m.PasswordRepeat, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PasswordRepeat)
                    </div>
                </div>
                <div class="col-md-6">
                    <fieldset>
                        <legend>Oprávnenia</legend>
                        <div class="row inner-row">
                            <div class="col-md-6">
                                @Html.LabelFor(x => x.IsAdminUser)
                                <span class="form-control frame">
                                    @Html.CheckBoxFor(m => m.IsAdminUser, new { @class = "styled" })
                                    <label for="IsAdminUser">&nbsp;</label>
                                </span>
                                @Html.ValidationMessageFor(m => m.IsAdminUser)
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(x => x.IsCustomerUser)
                                <span class="form-control frame">
                                    @Html.CheckBoxFor(m => m.IsCustomerUser, new { @class = "styled" })
                                    <label for="IsCustomerUser">&nbsp;</label>
                                </span>
                                @Html.ValidationMessageFor(m => m.IsCustomerUser)
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>

            @Html.ValidationSummary(true)
            <div class="row new-section">
                <div class="col-md-12">
                    <a href="#" onclick="document.getElementById('submitButton').click(); return false;" class="btn btn-default btn-lg">Zapísať</a>
                    <a href="@Url.Content("~/moj-ucet/uzivatelia")" class="btn btn-default btn-lg">Späť</a>
                    <input type="submit" id="submitButton" class="hidden" />
                </div>
            </div>
        </div>
    }
}
